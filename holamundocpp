#include <iostream>
using namespace std;


// Tablero vaci√≤n
void Tablerovacio(char tablero[3][3]) {
    for (int i=0; i < 3; i++){
        for (int j = 0; j < 3; j++) {
            tablero [i][j] = ' ';
        }
    }
}

// Mostrar el tablero
void mostrarTablero(char tablero[3][3]) {
    
    for (int i=0; i < 3; i++){
        for (int j = 0; j < 3; j++){
            tablero [i][j] = ' ';