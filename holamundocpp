#include <iostream>
using namespace std;


// Tablero vacio
void Tablerovacio(char tablero[3][3]) {
    for (int i=0; i < 3; i++){
        for (int j = 0; j < 3; j++) {
            tablero [i][j] = ' ';
        }
    }
}

// FunciÃ³n para mostrar el tablero
void mostrarTablero(char tablero[3][3]) {
    cout << "\n     1   2   3" << endl;
    cout << "   +---+---+---+" << endl;
    for (int i = 0; i < 3; i++) {
        cout << " " << (i + 1) << " ";
        for (int j = 0; j < 3; j++) {
            cout << "| " << tablero[i][j] << " ";
        }
        cout << "|" << endl;
        cout << "   +---+---+---+" << endl;
    }
    cout << endl;
}
